<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="749.0" prefWidth="1466.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Inventory.HelloApplication">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Pane prefHeight="699.0" prefWidth="829.0">
        <children>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" />
            <Label layoutX="12.0" prefHeight="91.0" prefWidth="835.0" style="-fx-background-color: beige;" text="Inventory ">
                <padding>
                    <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                </padding>
                <font>
                    <Font name="Bookshelf Symbol 7" size="55.0" />
                </font>
            </Label>
            <Button id="addButton" fx:id="btnAdd" layoutX="739.0" layoutY="579.0" mnemonicParsing="false" onAction="#btnAddItem" style="-fx-background-color: green;" text="Add">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <effect>
                    <Glow />
                </effect>
                <font>
                    <Font name="System Bold" size="12.0" />
                </font></Button>
            <Button id="removeButton" layoutX="792.0" layoutY="579.0" mnemonicParsing="false" onAction="#btnRemoveItem" style="-fx-background-color: maroon;" text="Remove">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <effect>
                    <Glow />
                </effect>
                <font>
                    <Font name="System Bold" size="12.0" />
                </font></Button>
            <Button id="editButton" layoutX="866.0" layoutY="579.0" mnemonicParsing="false" text="Edit ">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <effect>
                    <Glow />
                </effect>
                <font>
                    <Font name="System Bold" size="12.0" />
                </font></Button>
            <TableView fx:id="table" layoutX="-2.0" layoutY="75.0" prefHeight="497.0" prefWidth="981.0" style="-fx-background-color: beige;">
                <columns>
                    <TableColumn fx:id="categoryCol" prefWidth="75.0" text="Category " />
                    <TableColumn fx:id="itemCol" prefWidth="75.0" text="Item" />
                    <TableColumn fx:id="quantityCol" prefWidth="75.0" text="Quantity" />
                    <TableColumn fx:id="priceCol" prefWidth="75.0" text="Price" />
                </columns>
            </TableView>
        </children>
    </Pane>

</VBox>
